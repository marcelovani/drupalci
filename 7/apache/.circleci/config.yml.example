# PHP CircleCI 2.0 configuration file
version: 2
jobs:
  build:
    machine:
      docker_layer_caching: true
    working_directory: /tmp/drupalci
    steps:
      - run:
          name: Run tests
          command: docker run -v /tmp/drupalci/artifacts:/artifacts --name drupalci --rm marcelovani/drupalci:7-apache \
                          --project ${CIRCLE_PROJECT_REPONAME} \
                          --version dev-${CIRCLE_BRANCH} \
                          --vcs https://github.com/${CIRCLE_PROJECT_USERNAME}/${CIRCLE_PROJECT_REPONAME}.git \

      - store_artifacts:
          path: /tmp/drupalci/artifacts
